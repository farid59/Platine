{# src/OC/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "::base.html.twig" %}

{% block title %}
  Supprimer un document - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>Supprimer une annonce</h2>

  <p>
    Etes-vous certain de vouloir supprimer le document "{{ doc.alt }}" ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('ep_delete_file', {'id': doc.id}) }}" method="post">

    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>
  <hr>
  <a href="{{ path('ep_upload_file') }}" class="btn btn-default">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Retour 
    </a>
{% endblock %}