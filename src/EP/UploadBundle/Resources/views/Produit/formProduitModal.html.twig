<div class="modal-body">
  
{# <div class="well"> #}
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

<div class="col-lg-6 col-lg-offset-3">
  <div class="panel-group">
      <div class="box">
          <div class="box-header">Votre Produit</div>
          <div class="box-content">
          <div class="form-group">
            {{ form_label(form.designation, "Désignation", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
            {{ form_errors(form.designation) }}
            <div class="col-md-4">
              {{ form_widget(form.designation, {'attr': {'class': 'form-control input-md','placeholder':'Nom du produit'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.description, "Description", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
            {{ form_errors(form.description) }}
            <div class="col-md-4">
              {{ form_widget(form.description, {'attr': {'class': 'form-control input-md','placeholder':'Description du produit'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.reference, "Référence", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
            {{ form_errors(form.reference) }}
            <div class="col-md-4">
              {{ form_widget(form.reference, {'attr': {'class': 'form-control input-md','placeholder':'Référence'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.montantUnitaireHT, "Montant Unitaire H.T.", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
            {{ form_errors(form.montantUnitaireHT) }}
            <div class="col-md-4">     
                      <div class="input-group">
                        {{ form_widget(form.montantUnitaireHT, {'attr': {'class': 'form-control input-md','placeholder':'Montant en Euros'}}) }}
                        <span class="input-group-addon">€</span>
                      </div>
                  </div>
          </div>
                <div class="form-group">
                    {{ form_label(form.tva, "TVA", {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                    {{ form_errors(form.tva) }}
                    <div class="col-md-4">
                        <div class="input-group">
                            {{ form_widget(form.tva, {'attr': {'class': 'form-control input-md'}}) }}
                            <span class="input-group-addon">%</span>
                        </div>
                    </div>
                    
                </div>
      </div>
        </div>
  </div>
</div>

<div class="clearfix"></div>
</div>


<div class="modal-footer">
  

        <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-info" onclick="createProduit()" data-dismiss="modal">Valider</button>

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}
  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
{# </div> #}
</div>