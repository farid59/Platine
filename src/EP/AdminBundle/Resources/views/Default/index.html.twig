{% extends "EPAdminBundle::layout.html.twig" %}

{% block body %}
    
    {% for user in users %}
        
        <a href="{{ path('ep_admin_user_files', {'username' : user.username}) }}">
            <div class="col-lg-2" style="background-color: pink; border: solid 1px black; border-radius: 10px; text-align: center;">

                {{ user }} 
                {% if count[ user.username ] > 0 %}
                    <span class="badge" style="float: right; margin-right: -15px">{{ count[ user.username ] }}</span>
                {% endif %}

            </div>
        </a>

    {% endfor %}

{% endblock %}