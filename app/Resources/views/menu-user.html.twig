{% if app.user.canEditFacture %}
    <li><a href="{{ path('ep_edit_fact') }}"><i class="fa fa-pencil-square"></i><span class="hidden-sm"> Editer une facture</span></a></li>
    <li {% if app.request.get('_route') == 'ep_edit_client' %}class="active"{% endif %}><a href="{{ path('ep_show_client') }}"><i class="fa fa-users"></i><span class="hidden-sm"> Mes clients</span></a></li>
    <li {% if app.request.get('_route') == 'ep_edit_produit' %}class="active"{% endif %}><a href="{{ path('ep_show_produit') }}"><i class="fa fa-barcode"></i><span class="hidden-sm"> Mes produits</span></a></li>
{% endif %}
